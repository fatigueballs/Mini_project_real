<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <include layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Eligibility"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your SPM Grades (e.g., A, B, C, D, E, F):"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/inputMath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mathematics Grade"
                android:maxLength="2"
                android:inputType="textCapCharacters"/>

            <EditText
                android:id="@+id/inputScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Science / Physics Grade"
                android:maxLength="2"
                android:inputType="textCapCharacters"/>

            <EditText
                android:id="@+id/inputEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="English Grade"
                android:maxLength="2"
                android:inputType="textCapCharacters"/>

            <EditText
                android:id="@+id/inputOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="3rd Best Subject Grade"
                android:maxLength="2"
                android:inputType="textCapCharacters"/>

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Check Eligibility"
                android:backgroundTint="@color/primary_blue"/>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Apply Now"
                android:backgroundTint="#008000"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/footer"/>
</LinearLayout>