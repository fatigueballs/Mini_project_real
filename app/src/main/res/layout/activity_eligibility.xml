<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <include layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Eligibility"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Program Level:"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/rgProgramType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/rbDiploma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diploma"
                    android:checked="true"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/rbPreU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-U (GAPP/GUFP)"
                    android:layout_weight="1"/>
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your SPM Grades:"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerMath"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science / Physics"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerScience"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerEnglish"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3rd Best Subject"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerOther"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvOther2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4th Best Subject"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerOther2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/btn_dropdown"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Check Eligibility"
                android:backgroundTint="@color/primary_blue"/>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Apply Now"
                android:backgroundTint="#008000"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/footer"/>
</LinearLayout>